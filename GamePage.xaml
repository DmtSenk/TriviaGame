<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TriviaGame.GamePage"
             Title="GamePage">
    <VerticalStackLayout Padding="20" 
                         Spacing="10">
        <Label x:Name="RLabel"
               HorizontalOptions="Center"/>
        <Label x:Name="PlayerLabel" 
               HorizontalOptions="Center"/>
        <Label x:Name="Timer"
               HorizontalOptions="Center"/>
        <HorizontalStackLayout x:Name="SurvivalLayout"
                               HorizontalOptions="Center"
                               Spacing="5"/>
        <Label x:Name="QLabel" 
            HorizontalOptions="Center" 
            TextColor="Black"/>
        <VerticalStackLayout 
            x:Name="AnswersLayout" 
            Spacing="10" 
            HorizontalOptions="Center"/>
        <Button Text="Next" 
            Clicked="Button_Clicked" 
            HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>
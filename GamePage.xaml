<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TriviaGame.GamePage">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="CoinsUsers"
                     Text="0"
                     IconImageSource="coin.png"
                     Order="Primary"
                     Clicked="CoinsUsers_Clicked"/>
    </ContentPage.ToolbarItems>
    <VerticalStackLayout Padding="20" 
                         Spacing="10">
        <Label x:Name="RLabel"
               HorizontalOptions="Center"/>
        <Label x:Name="QTLabel"
               HorizontalOptions="Center"/>
        <Label x:Name="PlayerLabel" 
               HorizontalOptions="Center"/>
        <Label x:Name="Timer"
               HorizontalOptions="Center"/>
        <HorizontalStackLayout x:Name="SurvivalLayout"
                               HorizontalOptions="Center"
                               Spacing="5"/>
        <Label x:Name="QLabel" 
               HorizontalOptions="Center"/>
        <VerticalStackLayout 
            x:Name="AnswersLayout" 
            Spacing="10" 
            HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>
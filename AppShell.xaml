<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TriviaGame.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TriviaGame"
    Shell.FlyoutBehavior="Disabled"
    Title="TriviaGame">
    <Shell.ToolbarItems>
        <ToolbarItem x:Name="VolumeTool"
                     IconImageSource="{AppThemeBinding Light=volumelight.png, Dark=volumedark.png}"
                     Clicked="VolumeTool_Clicked"/>
    </Shell.ToolbarItems>
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
